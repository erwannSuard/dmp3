{% extends 'style.html.twig' %}
{% block title %} FAIRE-EASE | Hub {% endblock %}
{% block div %}

    <div class="container" style="background: linear-gradient(to left bottom, #AED741, #8fd16f, #53abab, #65CFCB);padding: 6px;border-radius: 25px;width: 100%;">
        {% if is_granted('ROLE_ADMIN') %}
            <div class="bg-white" style="border-radius: 20px">

                <div class="d-flex justify-content-center mb-3 pt-3"><h1>Admin HUB</h1></div>
                <div class="d-flex justify-content-around pb-4">
                    <a class="btn btn-outline-primary btn-lg" href="{{path('contact')}}">Add Contact</a>
                    <a class="btn btn-outline-primary btn-lg" href="{{path('project')}}">Add Project</a>
                    <a class="btn btn-outline-primary btn-lg" href="{{ path('romp') }}">Add a DMP</a>
                    <a class="btn btn-outline-primary btn-lg" href="{{path('research_output')}}">Add a Research Output</a>
                    <a class="btn btn-outline-danger btn-lg" href="{{path('logout')}}">Logout</a>

                </div>

            </div>
        {% elseif is_granted('ROLE_USER') %}
        <div>
            <div class="bg-white" style="border-radius: 20px">
                <div class="d-flex justify-content-center"><h1>User HUB</h1></div>

                <div class="d-flex justify-content-around pb-4">
                    <a class="btn btn-outline-primary btn-lg" href="{{path('research_output')}}">Add a research Output</a>
                        <a class="btn btn-outline-danger btn-lg" href="{{path('logout')}}">Logout</a>
                </div>
            </div>
        </div>
        {% endif %}
    </div>

{% endblock %}
