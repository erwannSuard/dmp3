{% extends 'style.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block div %}
    {{ form_start(form) }}
    <div style="background: linear-gradient(to left bottom, #AED741, #8fd16f, #53abab, #65CFCB);padding: 6px;border-radius: 25px;width: 100%;">

        <div class="row bg-white " style="background-color: white; ; border-radius: 20px; margin: 7px;">
            <h2 class="mt-3">Add a new contact</h2>
    {#        <legend>Contact General informations</legend>#}
            <div class="col-6">
                <div class="mt-3"> {{ form_row(form.lastName) }}</div>
                <div class="mt-3"> {{ form_row(form.firstName) }} </div>
                <div class="mt-3"> {{ form_row(form.mail) }} </div>
            </div>
            <div class="col-6" >
                <div class="mt-3">{{ form_row(form.affiliation) }}</div>
                <div class="mt-3">{{ form_row(form.laboratoryOrDepartment) }} </div>
                <div class="mt-3 mb-3">{{ form_row(form.identifier) }}</div>
            </div>

            <div class="d-flex justify-content-between mb-3 align-content-center">
                <a class="btn btn-outline-primary" href="{{ path('connected') }}">Return</a>
                <button type="submit" class="btn btn-primary">Submit new contact</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}


{% endblock %}
